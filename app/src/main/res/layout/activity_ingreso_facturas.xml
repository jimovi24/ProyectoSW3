<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sw3.proyecto.com.proyectosw3.IngresoFacturas">

    <TextView android:text="Ingreso de Facturas" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtView"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <Spinner android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/txtRubro"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:id="@+id/btnIngresar"
        android:layout_alignParentBottom="true"
        android:onClick="ingresar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rubro:"
        android:id="@+id/txtRubro"
        android:textSize="18dp"
        android:layout_below="@+id/txtValor"
        android:layout_alignEnd="@+id/txtFecha"
        android:layout_marginTop="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Factura:"
        android:id="@+id/txtFactura"
        android:textSize="18dp"
        android:layout_below="@+id/txtRuc"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ruc:"
        android:id="@+id/txtRuc"
        android:textSize="18dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha:"
        android:id="@+id/txtFecha"
        android:textSize="18dp"
        android:layout_below="@+id/txtFactura"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor:"
        android:id="@+id/txtValor"
        android:textSize="18dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/txtRubro" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EdtextFactura"
        android:layout_alignBottom="@+id/txtFactura"
        android:layout_alignStart="@+id/btnIngresar"
        android:layout_alignEnd="@+id/txtView" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EdtextRuc"
        android:layout_alignBottom="@+id/txtRuc"
        android:layout_alignStart="@+id/EdtextFactura"
        android:layout_alignEnd="@+id/EdtextFactura" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EdtextFecha"
        android:layout_alignBottom="@+id/txtFecha"
        android:layout_alignStart="@+id/EdtextRuc"
        android:layout_alignEnd="@+id/EdtextRuc" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EdtextValor"
        android:layout_alignBottom="@+id/txtValor"
        android:layout_alignStart="@+id/EdtextFecha"
        android:layout_alignEnd="@+id/EdtextFecha" />


</RelativeLayout>
